<main class="contenedor contenedor-formulario ">
    <h1> <% title %>  </h1>
    <form method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label>Imagen de perfil: </label>
            <% if (user.image) { %>
                <img src="/uploads/profile/<%= user.image %> " width="200">
            <% } else { %>
                <p>No has cargado ninguna imagen de perfil</p>
            <% } %> 
        </div>

        <div class="campo">
            <label >Imagen</label>
            <input type="file" name="image">
        </div>
        <!-- campo -->

        <div class="campo enviar">
            <input type="submit" value="Subir imagen" class="btn btn-rosa">
        </div>
    </form>
</main>