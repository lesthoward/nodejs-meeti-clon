<main class="contenedor panel-administracion">

<main class="contenedor panel-administracion">
    <h1><%= title %> </h1>

    <div class="contenedor-botones">
        <a href="/group/new" class="btn btn-amarillo">Crear grupo</a>
        <a href="/meeti/new" class="btn btn-azul">Nuevo Meeti</a>
        <a href="/user/edit" class="btn btn-rosa">Editar perfil</a>
        <a href="/user/image" class="btn btn-amarillo">Imagen de perfil</a>
    </div>

    <div class="seccion-admin">
        <h2>Tus eventos</h2>
        <ul>
            <% if (meetis.length) { %>
                <% meetis.forEach(uniqMeeti => { %>
                    <li>
                        <div class="informacion-admin">
                            <% moment.locale('es') %> 
                            <% const date = uniqMeeti.date + ' ' + uniqMeeti.time %> 
                            <p class="fecha"> <%= moment(date).format('LLL') %>  </p>
                            <h3><%= uniqMeeti.title %></h3>
                            <small"><%= uniqMeeti.members.length %> Participantes</small>
                        </div>
                        <div class="acciones contenedor-botones">
                            <a href="/meeti/edit/<%= uniqMeeti.id %>" class="btn btn-verde">Editar</a>
                            <a href="/meeti/edit-image/<%= uniqMeeti.id %>" class="btn btn-azul2">Imagen</a>
                            <a href="/meeti/delete/<%= uniqMeeti.id %>" class="btn btn-rojo">Eliminar</a>
                        </div>
                    </li>
                <% }) %>
            <% } else { %>
                 <p>No tienes meeti's todav√≠a, comienza creado...</p>
            <% } %>
        </ul>
    </div>

    <div class="seccion-admin">
        <h2>Tus grupos</h2>
        <ul>
        <% if (groups.length) { %>
            <% groups.forEach(group => { %>
                <li>
                    <div class="informacion-admin">
                        <h3><%= group.name %> </h3>
                    </div>
                    <div class="acciones contenedor-botones">
                        <a href="/group/edit/<%= group.id %>" class="btn btn-verde">Editar</a>
                        <a href="/group/edit-image/<%= group.id %>" class="btn btn-azul2">Imagen</a>
                        <a href="/group/delete/<%= group.id %>" class="btn btn-rojo">Eliminar</a>
                    </div>
                </li>
            <% }) %>
        <% } else {%>
            <p>No tienes un grupo creado</p>
        <% } %> 
        </ul>
    </div>


    <div class="seccion-admin">
        <h2>Meeti's anteriores</h2>
        <ul>
            <% if (prevMeetis.length) { %>
                <% prevMeetis.forEach(uniqMeeti => { %>
                    <li>
                        <div class="informacion-admin">
                            <% moment.locale('es') %> 
                            <% const date = uniqMeeti.date + ' ' + uniqMeeti.time %> 
                            <p class="fecha"> <%= moment(date).format('LLL') %>  </p>
                            <h3><%= uniqMeeti.title %></h3>
                            <small"><%= uniqMeeti.members.length %> Participantes</small>
                        </div>
                        <div class="acciones contenedor-botones">
                            <a href="/meeti/edit/<%= uniqMeeti.id %>" class="btn btn-verde">Editar</a>
                            <a href="/meeti/edit-image/<%= uniqMeeti.id %>" class="btn btn-azul2">Imagen</a>
                            <a href="/meeti/delete/<%= uniqMeeti.id %>" class="btn btn-rojo">Eliminar</a>
                        </div>
                    </li>
                <% }) %>
            <% } else { %>
                 <p>No hay meeti's anteriores...</p>
            <% } %>
        </ul>
    </div>
</main>