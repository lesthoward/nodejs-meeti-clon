<main class="contenedor contenedor-formulario no-padding">
    <h1> <% title %>  </h1>
    <form action="/group/new" method="POST" class="default-form">
        <div class="campo">
            <label for="">Nombre</label>
            <input type="text" name="name" placeholder="Comunidad de freelancer">
        </div>
        <!-- campo -->
        <div class="campo descripcion">
            <label for="">Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="description">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <div class="campo">
            <label for="">Categoría</label>
            <select class="categoria">
                <option value="" selected disabled>-- Elige una categoría --</option>
                <% categories.forEach(category => { %>
                    <option value="<%= category.id %> "><%= category.name %> </option>
                <% }) %>
            </select>
        </div>
        <!-- campo -->

        <!-- .campo -->
        <div class="campo">
            <label for="">Imagen</label>
            <input type="file" name="imagen">
        </div>
        <!-- campo -->

        <div class="campo">
            <label for="">Sitio Web (opcional)</label>
            <input type="text" name="website" placeholder="https://lesthoward.com">
        </div>
        <!-- campo -->

        <input type="submit" value="Crear grupo" class="btn btn-rosa">
    </form>
</main>