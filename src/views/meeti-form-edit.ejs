<main class="contenedor contenedor-formularios">
    <h1><%- title %></h1>
    <form class="default-form" method="POST">
        <legend>Sobre el Meeti</legend>
        <div class="campo">
            <label>Grupo</label>
            <select name="groupId">
                <option value="" disabled selected>-- Selecciona Grupo --</option>
                <% if (groups) { %>
                    <% groups.forEach(uniqGroup => { %>
                        <option value="<%= uniqGroup.id %>"  <%= uniqGroup.id === meeti.groupId ? 'selected' : null  %> ><%= uniqGroup.name %> </option>
                    <% }) %>
                <% } %>
            </select>
        </div>
        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="title" placeholder="Titulo Meeti" value="<%= meeti.title %> ">
        </div>
        <div class="campo">
            <label>Invitado</label>
            <input type="text" name="guest" placeholder="Nombre Invitado o Ponente (si aplica)" value="<%= meeti.guest %>">
        </div>
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Fecha</label>
                <input type="date" name="date" placeholder="Fecha Meeti" value="<%= meeti.date %>">
            </div>
            <div class="campo">
                <label>Hora</label>
                <input type="time" name="time" placeholder="Hora Meeti" value="<%= meeti.time %>">
            </div>
        </div>
        <div class="campo">
            <label>Cupo</label>
            <input type="number" min="1" name="spot" placeholder="Cupo Meeti (si aplica)" value="<%= meeti.spot %>">
        </div>
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="description" value="<%= meeti.description %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <legend>Ubicación Meeti</legend>
        <div class="campo buscador">
            <label>Coloca la Dirección del Meeti</label>
            <div class="contenedor-input">
                <input type="text" id="searcher" placeholder="Ubicación">
                <small>El asistente colocará una dirección estimada</small>
            </div>
        </div>

        <div class="campo mapa">
            <div id="map"></div>
            <p class="informacion">Mueve el PIN hacia el punto exacto, en caso de ser requerido</p>
        </div>

        <p class="informacion">Confirma que los siguientes campos sean correctos:</p>
        <div class="campo">
            <label>Dirección</label>
            <input type="text" id="direccion" name="address" placeholder="Dirección" value="<%= meeti.address %>">
        </div>
        <!-- campo -->
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Editar Meeti">
        </div>
    </form>
</main>
